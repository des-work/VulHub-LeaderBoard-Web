# VulHub Leaderboard Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=vulhub
POSTGRES_USER=vulhub
POSTGRES_PASSWORD=your-secure-password-here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# =============================================================================
# API CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=4000
API_URL=http://localhost:4000/api/v1

# =============================================================================
# WEB APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEVELOPMENT CONFIGURATION (for docker-compose.dev.yml)
# =============================================================================
# Uncomment these for development
# NODE_ENV=development
# DATABASE_URL=postgresql://vulhub:vulhub123@postgres-dev:5432/vulhub_dev
# REDIS_URL=redis://redis-dev:6379
# JWT_SECRET=dev-jwt-secret-key-change-in-production
# JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production

# This is an example environment file for production.
# Copy this file to .env in the same directory (infra/.env) and fill in the values.
# DO NOT commit the .env file to version control.

# PostgreSQL
POSTGRES_PASSWORD=your_strong_postgres_password

# Redis
REDIS_PASSWORD=your_strong_redis_password

# Application Secrets
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your_super_secret_refresh_key_here
REFRESH_TOKEN_EXPIRES_IN=7d

# URLs
CORS_ORIGIN=http://localhost
NEXT_PUBLIC_API_URL=http://localhost/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost/
NEXT_PUBLIC_APP_URL=http://localhost

# Grafana
GRAFANA_PASSWORD=your_strong_grafana_password
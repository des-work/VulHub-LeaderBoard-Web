{
  "name": "vulhub-leaderboard",
  "version": "1.0.0",
  "description": "A modular, secure, and gamified platform for cybersecurity students to practice, compete, and grow",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "build:packages": "pnpm --filter @vulhub/schema build && pnpm --filter @vulhub/utils build && pnpm --filter @vulhub/config build && pnpm --filter @vulhub/ui build",
    "build:api": "pnpm build:packages && pnpm --filter @vulhub/api build",
    "build:web": "pnpm build:packages && pnpm --filter @vulhub/web build",
    "dev:stack": "docker compose -f docker-compose.dev.yml up -d --build",
    "dev:stack:down": "docker compose -f docker-compose.dev.yml down -v",
    "db:migrate": "docker compose -f docker-compose.production.yml run --rm api pnpm prisma migrate deploy",
    "db:generate": "pnpm --filter @vulhub/api prisma generate",
    "db:seed": "pnpm --filter @vulhub/api prisma db seed",
    "db:studio": "pnpm --filter @vulhub/api prisma studio",
    "prod:stack": "docker compose --env-file .env -f docker-compose.production.yml up --build -d",
    "prod:stack:down": "docker compose --env-file .env -f docker-compose.production.yml down -v",
    "storybook": "pnpm --filter @vulhub/ui storybook",
    "gen:module": "node scripts/generate-module.js",
    "gen:feature": "node scripts/generate-feature.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

{
  "name": "vulhub-leaderboard",
  "version": "1.0.0",
  "description": "A modular, secure, and gamified platform for cybersecurity students to practice, compete, and grow",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "postinstall": "cd apps/api && npm run prisma:generate",
    "dev": "npm run dev:local",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "dev:local": "node scripts/start-local.js",
    "dev:stop": "node scripts/stop-local.js",
    "dev:cleanup": "node scripts/cleanup-local.js"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
